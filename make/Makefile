gcovtests: gcovapp cpputest
ifneq (,$(gcovtests_config))
	@echo "==== Building gcovtests ($(gcovtests_config)) ===="
	@${MAKE} --no-print-directory -C . -f gcovtests.make config=$(gcovtests_config)
